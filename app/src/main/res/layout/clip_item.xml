<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="93.33dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="93.33dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.ourincheon.wazap.NotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D - 52"
                    android:id="@+id/cDday"
                    android:textSize="11dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12.33dp"
                    android:textColor="#0057ff" />

                <com.ourincheon.wazap.NotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[서울] 한화생명"
                    android:id="@+id/cTitle"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="7dp" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/image1"
                        android:background="#0057ff"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp" />
                    <com.ourincheon.wazap.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image1"
                        android:layout_toEndOf="@+id/image1"
                        android:text="카테고리"
                        android:id="@+id/cCate1"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="10dp"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_toRightOf="@+id/cCate1"
                        android:layout_toEndOf="@+id/cCate1"
                        android:id="@+id/image2"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp" />
                    <com.ourincheon.wazap.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image2"
                        android:layout_toEndOf="@+id/image2"
                        android:layout_toLeftOf="@+id/textView28"
                        android:layout_toStartOf="@+id/textView28"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginEnd="6dp"
                        android:lines="1"
                        android:text=""
                        android:textSize="13dp"
                        android:ellipsize="end"
                        android:id="@+id/cCate2" />



                    <com.ourincheon.wazap.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/cMember"
                        android:layout_toStartOf="@+id/cMember"
                        android:text="|"
                        android:id="@+id/textView28"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="17.33dp"
                        android:textSize="11dp" />

                    <com.ourincheon.wazap.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="모집인원 2명"
                        android:id="@+id/cMember"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="13dp"
                        android:layout_marginLeft="6dp" />
                </RelativeLayout>
            </LinearLayout>

           <Button
                android:focusable="false"
                android:id="@+id/cJoin"
                android:layout_width="26.67dp"
                android:layout_height="24.67dp"
                android:layout_marginRight="15.67dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/heart2"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>